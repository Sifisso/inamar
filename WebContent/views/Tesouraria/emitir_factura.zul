							<button zclass="btn btn-danger btn-sm" visible="false"
							type="button" id="btn_cancelar" iconSclass="fa fa-undo" forward="onClick=onClickClose()">
							Cancelar
						</button>
					</div>
                        
                        <listbox visible="true" id="lbx_itens"
									 rows="5">
